<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="docModel"
            type="com.digidoctor.android.model.DoctorModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/BackgroundColor"
            android:orientation="vertical"
            tools:context=".view.fragments.ChooseTimeFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_round"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="@dimen/_20sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="@{docModel.drName}"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="@{docModel.speciality}"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_20sdp">

                <TextView
                    android:id="@+id/textView84"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/_40sdp"
                    android:paddingRight="@dimen/_40sdp"
                    android:text="@string/you_can_send"
                    android:textAlignment="center"
                    android:textColor="#262E3F"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/h5"
                        android:layout_marginRight="@dimen/h5"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:layout_margin="@dimen/dimen_2dp"
                            android:layout_marginBottom="@dimen/dimen_2dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:padding="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/dimen_5dp"
                            android:focusable="true">

                            <ImageView
                                android:id="@+id/imageView28"
                                android:layout_width="32dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/gal_image" />


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center_horizontal"
                            android:text="@string/images"
                            android:textColor="#3F4E6E"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="62dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="@dimen/dimen_2dp"
                            android:background="@drawable/rectangle_outline"
                            android:elevation="@dimen/dimen_5dp"
                            android:padding="@dimen/_10sdp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="@dimen/dimen_5dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/audio_file" />


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center_horizontal"
                            android:text="@string/audio"
                            android:textColor="#3F4E6E"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="@dimen/dimen_2dp"
                            android:background="@drawable/rectangle_outline"
                            android:elevation="@dimen/dimen_5dp"
                            android:padding="@dimen/_10sdp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="@dimen/dimen_5dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/video_file" />


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center_horizontal"
                            android:text="@string/video"
                            android:textColor="#3F4E6E"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tvCurrentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableTint="@color/PrimaryColor"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#262E3F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calRec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCurrentDate"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/calender_view" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/timingRec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/calRec"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/timing_view_primary_new" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</layout>