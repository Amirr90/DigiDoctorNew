<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FE"
    tools:context=".view.fragments.Patient.ShowMemberListFragment">


    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="#F2F6FE">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Add Family Member"
            android:textColor="#262E3F"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView27"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/btnAddOtherPatients"
            android:fontFamily="@font/poppins"
            android:paddingTop="5dp"
            android:text="You want to add new patient member."
            android:textColor="#262E3F"
            android:textSize="17dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnAddOtherPatients"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_for_search"
            android:backgroundTint="@color/YellowColo"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:paddingRight="20dp"
            android:paddingBottom="7dp"
            android:text="ADD"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="18dp"
        android:id="@+id/recMemberList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainLayout"
        android:nestedScrollingEnabled="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/member_view" />
</RelativeLayout>