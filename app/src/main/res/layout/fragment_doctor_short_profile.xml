<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="docMo"
            type="com.digidoctor.android.model.DoctorModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.digiDoctorFragments.DoctorProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.fragments.digiDoctorFragments.DoctorProfileFragment">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnBookAppointment"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="25dp">

                        <ImageView
                            android:id="@+id/imageView20"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:loadCustomDoctorImage="@{docMo.profilePhotoPath}"
                            android:padding="2dp"
                            app:srcCompat="@drawable/doc_image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/imageView20"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView92"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="@{docMo.drName}"
                                android:textColor="#262E3F"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView93"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="@{docMo.speciality+`, `+docMo.degree}"
                                android:textColor="#3F4E6E"
                                android:textSize="14dp" />
                        </LinearLayout>


                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView20"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="16dp">

                            <ImageView
                                android:id="@+id/ivLocationPin"
                                android:layout_width="12dp"
                                android:layout_height="15dp"
                                android:layout_marginTop="4dp"
                                app:srcCompat="@drawable/location_pin" />

                            <TextView
                                android:id="@+id/textView94"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_toRightOf="@+id/ivLocationPin"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="@{docMo.hospitalName}"
                                android:textColor="#3F4E6E"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView94"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/ivLocationPin"
                                android:drawablePadding="@dimen/_10sdp"
                                android:fontFamily="@font/poppins"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="@{docMo.address}"
                                android:textColor="#3F4E6E"
                                android:textSize="12dp" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_from_top"
                        android:paddingLeft="15dp"
                        android:paddingTop="22dp"
                        android:paddingRight="22dp"
                        android:paddingBottom="22dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <RelativeLayout
                                android:id="@+id/imageView34"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:background="@drawable/round_for_search"
                                android:backgroundTint="#F2B962">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/user" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/textView101"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:layout_toRightOf="@id/imageView34"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@{String.valueOf(docMo.noofPatients)+`\nPatients`}"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="15dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <RelativeLayout
                                android:id="@+id/rlImageView"
                                android:layout_marginLeft="20dp"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:background="@drawable/round_for_search"
                                android:backgroundTint="#F2B962">

                                <ImageView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/experience" />
                            </RelativeLayout>

                            <TextView
                                android:layout_toRightOf="@+id/rlImageView"
                                android:id="@+id/textView102"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@{docMo.yearOfExperience}"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="15dp" />

                        </RelativeLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="23dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/textView104"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/about_doc"
                            android:textColor="#262E3F"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView105"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="@{docMo.description}"
                            android:textColor="#3F4E6E"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/working_time"
                            android:textColor="#262E3F"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView107"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="Mon - Fri, 10:00AM - 08:00 PM"
                            android:textColor="#3F4E6E"
                            android:textSize="12dp" />


                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <Button
                android:id="@+id/btnBookAppointment"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_for_search"
                android:backgroundTint="@color/PrimaryColor"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/book_appointment"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </FrameLayout>
</layout>