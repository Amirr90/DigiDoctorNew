<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.Lab.FragmentAddressDetails">


    <ImageView
        android:id="@+id/imageView65"
        android:layout_width="wrap_content"
        android:layout_height="248dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="90dp"
        android:src="@drawable/labaddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView65"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:paddingLeft="26dp"
                android:paddingRight="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/ivName"
                        android:layout_width="14dp"
                        android:layout_height="17dp"
                        android:backgroundTint="#0A586C"
                        app:srcCompat="@drawable/homelabaddress" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ivName"
                        android:fontFamily="@font/poppins_medium"
                        android:text="House Address"
                        android:textColor="#BCBCBC"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editTextTextPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvName"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/ivName"
                        android:background="@null"
                        android:fontFamily="poppins_medium"
                        android:hint="House Address"
                        android:inputType="textPersonName"
                        android:textColor="#262E3F"
                        android:textColorHint="#BCBCBC"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_below="@+id/editTextTextPersonName"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#EBEDF2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/ivhouse"
                        android:layout_width="14dp"
                        android:layout_height="17dp"
                        app:srcCompat="@drawable/home" />

                    <TextView
                        android:id="@+id/tvhouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ivhouse"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Landmark"
                        android:textColor="#BCBCBC"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editTextTextPersonhouse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvhouse"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ivhouse"
                        android:background="@null"
                        android:fontFamily="poppins_medium"
                        android:hint="Landmark"
                        android:inputType="text"
                        android:textColor="#262E3F"
                        android:textColorHint="#BCBCBC"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_below="@+id/editTextTextPersonhouse"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#EBEDF2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/ivMobile"
                        android:layout_width="14dp"
                        android:layout_height="17dp"
                        app:srcCompat="@drawable/home" />

                    <TextView
                        android:id="@+id/tvMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ivMobile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Locality"
                        android:textColor="#BCBCBC"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editTextMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvMobile"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/ivMobile"
                        android:background="@null"
                        android:fontFamily="poppins_medium"
                        android:hint="Locality"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="#262E3F"
                        android:textColorHint="#BCBCBC"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_below="@+id/editTextMobile"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#EBEDF2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/ivarea"
                        android:layout_width="14dp"
                        android:layout_height="17dp"
                        app:srcCompat="@drawable/zipcode" />

                    <TextView
                        android:id="@+id/tvarea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ivarea"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Pin Code"
                        android:textColor="#BCBCBC"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvarea"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/ivarea"
                        android:background="@null"
                        android:fontFamily="poppins_medium"
                        android:hint="Pin Code"
                        android:inputType="text"
                        android:maxLength="10"
                        android:textColor="#262E3F"
                        android:textColorHint="#BCBCBC"
                        android:textSize="14sp"
                        android:textStyle="bold" />>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_below="@+id/area"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#EBEDF2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/ivPin"
                        android:layout_width="14dp"
                        android:layout_height="17dp"
                        app:srcCompat="@drawable/officebuilding" />

                    <TextView
                        android:id="@+id/tvPin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ivPin"
                        android:fontFamily="@font/poppins_medium"
                        android:text=" Pin Code"
                        android:textColor="#BCBCBC"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/EditTextPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPin"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ivPin"
                        android:background="@null"
                        android:maxLength="6"
                        android:fontFamily="poppins_medium"
                        android:hint="Enter Pin Code"
                        android:inputType="number"
                        android:paddingRight="10dp"
                        android:textColor="#262E3F"
                        android:textColorHint="#BCBCBC"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_below="@+id/EditTextPin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#EBEDF2" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imagelocality"
                        android:layout_width="14dp"
                        android:layout_height="17dp"
                        app:srcCompat="@drawable/officebuilding" />

                    <TextView
                        android:id="@+id/tvLocality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imagelocality"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Label"
                        android:textColor="#BCBCBC"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/EditTextLocality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvLocality"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imagelocality"
                        android:background="@drawable/cartview_round_layout"
                        android:fontFamily="poppins_medium"
                        android:overScrollMode="always"
                        android:textColor="#262E3F"
                        android:text="Home"
                        android:textColorHint="#BCBCBC"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_below="@+id/EditTextLocality"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="9dp"
                        android:background="#EBEDF2" />
                </RelativeLayout>


                <Button
                    android:id="@+id/btnUpdateProfile"
                    android:layout_width="305dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/round_for_search"
                    android:backgroundTint="#EDA537"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:backgroundTint="#EDA537" />


            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>