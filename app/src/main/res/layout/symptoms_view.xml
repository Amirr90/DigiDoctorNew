<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="symptoms"
            type="com.digidoctor.android.model.SymptomModel" />

        <variable
            name="adapterInterface"
            type="com.digidoctor.android.interfaces.AdapterInterface" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSymptoms"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp">

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerVertical="true"
                android:loadCustomDoctorImage="@{symptoms.displayIcon}"
                app:srcCompat="@drawable/alternative" />

            <TextView
                android:id="@+id/textView68"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="3dp"
                android:layout_toRightOf="@+id/imageView27"
                android:fontFamily="@font/poppins_medium"
                android:text="@{symptoms.problemName}"
                android:textColor="#262E3F"
                android:textSize="17dp"
                android:textStyle="bold" />

            <CheckBox
                android:onClick="@{()->adapterInterface.onItemClicked(symptoms)}"
                android:id="@+id/radioButton5"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:checked="false" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>