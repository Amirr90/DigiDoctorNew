<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/BackgroundColor"
    tools:context=".view.fragments.SpecialitiesFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_round"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingRight="10dp"
        android:paddingBottom="@dimen/_20sdp">

        <EditText
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColorHint="#A2B3B8"
            android:textSize="14dp"
            android:paddingRight="20dp"
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_for_search"
            android:backgroundTint="@android:color/white"
            android:drawableRight="@drawable/video_camera"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Search Specialities Here"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/specRec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_20sdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/specialitiy_view" />

</LinearLayout>