<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="doModel"
            type="com.digidoctor.android.model.DoctorModel" />

        <variable
            name="bookingUser"
            type="com.digidoctor.android.model.User" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.BookAppointmentFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/BackgroundColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_round"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="@dimen/_20sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingLeft="5dp"
                        android:text="@{doModel.drName}"
                        android:textColor="@android:color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="5dp"
                        android:text="@{doModel.speciality+`, `+doModel.degree}"
                        android:textColor="@android:color/white"
                        android:textSize="14dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/appointment_book_for"
                        android:textColor="#262E3F"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPatientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView88"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingTop="10dp"
                        android:text="@{bookingUser.name}"
                        android:textColor="#00000D"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvBookAppointmentTimeDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView88"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingTop="10dp"
                        android:textColor="#3F4E6E"
                        android:textSize="15dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvBookAppointmentTimeDate"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp">

                        <Button
                            android:id="@+id/btnSelf"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/round_for_search"
                            android:backgroundTint="@color/YellowColo"
                            android:fontFamily="@font/poppins_semibold"
                            android:maxLines="2"
                            android:text="@string/self"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnSelectOtherMember"
                            android:layout_width="180dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/btnSelf"
                            android:background="@drawable/round_for_search"
                            android:backgroundTint="#F1F4F9"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:drawableTint="@color/greyLight"
                            android:fontFamily="@font/poppins_semibold"
                            android:paddingRight="10dp"
                            android:text="@string/select_member"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView91"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Patient's information : "
                        android:textColor="#262E3F"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/full_name"
                        android:textColor="#3E4D6C"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextTextPersonName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/your_name"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:text="@{bookingUser.name}"
                        android:textColor="#3E4E6E"
                        android:textColorHint="#AAB4CD"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/mobile_number"
                        android:textColor="#3E4D6C"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/mobile_number"
                        android:inputType="phone"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:text="@{bookingUser.mobileNo}"
                        android:textColor="#3E4E6E"
                        android:textColorHint="#AAB4CD"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/your_email"
                        android:textColor="#3E4D6C"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextTexEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/enter_your_email"
                        android:inputType="textEmailSubject"
                        android:singleLine="true"
                        android:text="@{bookingUser.emailId}"
                        android:textColor="#3E4E6E"
                        android:textColorHint="#AAB4CD"
                        android:textSize="16dp" />


                    <CheckBox
                        android:id="@+id/radioButton6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/you_want_to_update_on_whatsapp"
                        android:textColor="#3E4D6C"
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/round_for_search"
                        android:backgroundTint="@color/PrimaryColor"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/confirm"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</layout>